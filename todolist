todos = []

while True:
    user_action = input("Enter add, show, and exit:")
    user_action = user_action.strip()

    match user_action:
        case 'add':
            todo = input("Enter the todo:")
            todos.append(todo)
        case 'show':
            print(todos)
        case 'exit':
            break
        case undefined:
            print("Unknowm Command,You can only add , show or exit from the terminal  ")

print("see ya!")
